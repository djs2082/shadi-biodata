# API Configuration
VITE_COUNTER_API_KEY=your_api_key_here
VITE_COUNTER_API_URL=https://api.counterapi.dev/v1

# App Configuration
VITE_APP_NAME=Shadi Biodata Maker
VITE_APP_VERSION=2.0.0

# Feature Flags (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# Translation Service Configuration
# Options: 'libretranslate', 'google', or 'microsoft'
VITE_TRANSLATION_PROVIDER=libretranslate

# LibreTranslate Configuration
# Get a free API key from: https://portal.libretranslate.com
VITE_LIBRETRANSLATE_URL=https://libretranslate.com
VITE_LIBRETRANSLATE_API_KEY=your_libretranslate_api_key_here

# Google Cloud Translation API (only required if using 'google' provider)
VITE_GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here

# Microsoft Translator API (only required if using 'microsoft' provider)
# Free tier: 2 million characters/month
# Get your key from: https://azure.microsoft.com/en-us/services/cognitive-services/translator/
VITE_MICROSOFT_TRANSLATOR_KEY=your_microsoft_api_key_here
VITE_MICROSOFT_TRANSLATOR_REGION=your_azure_region_here
